{
  "name": "refine",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "pnpm@8.10.0",
  "scripts": {
    "build:packages": "pnpm run --filter \"./packages/*\" build",
    "test": "pnpm playwright test",
